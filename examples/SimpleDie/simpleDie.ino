/* * Dice Beispielprogramm fuer die Dice Library. * Zuerst wird die Bibliothek inkludiert. */#include "dice.h"/* * Hier wird Würfelobjekt (d) erstellt. * Mit diesem können später Methoden wie "animation" aufgerufen werden. * Beim erstellen des Objekts müssen die verwendeten Pins eingesetzt werden. * Beispielanordnung: * LED-Nr.     |  Pin-Nr.  | *  0   1      |  7   4    | *  4 6 5      |  8 2 5    | *  3   2      |  6   9    | */Dice d(7,4,9,6,8,5,2);// Auf dieser Variable wird der Zustand des Knopfes gespeichertunsigned char buttonState = 0;void setup() {  // Die Animation mit 10 Zyklen starten  d.animation(10);    // Knopf als Input festlegen  pinMode(3, INPUT_PULLUP);    // Random Seed setzen um den Zufall zu verbessern  randomSeed(analogRead(0));}void loop() {  buttonState = digitalRead(3);  if (buttonState == LOW) {    d.showNumber(random(1,8));  }}